{
    "$schema": "http://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "target": "ES2022",
        "lib": [ "ES2022", "DOM" ],
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "rootDir": "src",
        "outDir": "lib",
        "noImplicitAny": true,
        "noImplicitOverride": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "declaration": true,
        "useDefineForClassFields": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": false
    }
}
